{
  "version": 2,
  "name": "facebook-automation-dashboard",
  "builds": [
    {
      "src": "dashboard.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "installCommand": "pip install -r requirements_vercel.txt",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dashboard.py"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task",
    "FLASK_ENV": "production"
  },
  "functions": {
    "dashboard.py": {
      "maxDuration": 30
    }
  }
}
