{
  "name": "facebook-automation",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "worker",
    "shared"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:client dev:server dev:worker",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "dev:worker": "npm run dev --workspace=worker",
    "build": "npm run build --workspaces",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "build:worker": "npm run build --workspace=worker",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "facebook",
    "automation",
    "publishing",
    "social-media"
  ],
  "author": "",
  "license": "ISC",
  "description": "מערכת אוטומטית לפרסום פוסטים לפייסבוק עם תזמון וניהול קבוצות",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
